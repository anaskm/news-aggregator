{
  "openapi": "3.0.3",
  "info": {
    "title": "News Aggregator API",
    "version": "1.0.0",
    "description": "API for fetching articles with filters and details."
  },
  "servers": [
    {
      "url": "http://newsapp.localhost/api/v1",
      "description": "API Server"
    }
  ],
  "paths": {
    "/articles": {
      "get": {
        "summary": "Get a list of articles",
        "description": "Fetch paginated list of articles with optional filters.",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          { "in": "query", "name": "filters", "schema": { "type": "string" }, "description": "Additional filters for articles" },
          { "in": "query", "name": "query", "schema": { "type": "string" }, "description": "Search query" },
          {
            "in": "query",
            "name": "source",
            "schema": {
              "type": "string",
              "enum": ["news_org", "nytimes", "guardian", "news_ai"]
            },
            "description": "Filter by source (dropdown)"
          },
          { "in": "query", "name": "category", "schema": { "type": "string" }, "description": "Filter by category" },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 }, "description": "Page number" },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 10 }, "description": "Number of items per page" }
        ],
        "responses": {
          "200": {
            "description": "A paginated list of articles",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleListResponse"
                },
                "examples": {
                  "sample": {
                    "summary": "Example response",
                    "value": {
                      "data": [
                        {
                          "id": 476,
                          "title": "Woody Allen’s First Novel: Funny-ish, but Very Familiar",
                          "body": "In “What’s With Baum?,” an anxious, jealous and thrice-married writer finds himself stranded in a culture that wants more “schmaltz,” less “wisdom.”",
                          "url": "https://www.nytimes.com/2025/09/21/books/review/woody-allens-whats-with-baum.html",
                          "category": "Book Review",
                          "source": "New York Times",
                          "published_at": "2025-09-21T09:02:08.000000Z"
                        }
                      ],
                      "meta": {
                        "current_page": 1,
                        "per_page": 10,
                        "total": 740,
                        "last_page": 74
                      }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/articles/{id}": {
      "get": {
        "summary": "Get article details",
        "description": "Fetch a single article by ID.",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "integer" },
            "description": "The ID of the article"
          }
        ],
        "responses": {
          "200": {
            "description": "Article details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Article" },
                "examples": {
                  "sample": {
                    "summary": "Example response",
                    "value": {
                      "id": 476,
                      "title": "Woody Allen’s First Novel: Funny-ish, but Very Familiar",
                      "body": "In “What’s With Baum?,” an anxious, jealous and thrice-married writer finds himself stranded in a culture that wants more “schmaltz,” less “wisdom.”",
                      "url": "https://www.nytimes.com/2025/09/21/books/review/woody-allens-whats-with-baum.html",
                      "category": "Book Review",
                      "source": "New York Times",
                      "published_at": "2025-09-21T09:02:08.000000Z"
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Article not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Article": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 476 },
          "title": {
            "type": "string",
            "example": "Woody Allen’s First Novel: Funny-ish, but Very Familiar"
          },
          "body": {
            "type": "string",
            "example": "In “What’s With Baum?,” an anxious, jealous and thrice-married writer finds himself stranded in a culture that wants more “schmaltz,” less “wisdom.”"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "example": "https://www.nytimes.com/2025/09/21/books/review/woody-allens-whats-with-baum.html"
          },
          "category": { "type": "string", "example": "Book Review" },
          "source": { "type": "string", "example": "New York Times" },
          "published_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-09-21T09:02:08.000000Z"
          }
        }
      },
      "ArticleListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Article" }
          },
          "meta": {
            "type": "object",
            "properties": {
              "current_page": { "type": "integer", "example": 1 },
              "per_page": { "type": "integer", "example": 10 },
              "total": { "type": "integer", "example": 740 },
              "last_page": { "type": "integer", "example": 74 }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
